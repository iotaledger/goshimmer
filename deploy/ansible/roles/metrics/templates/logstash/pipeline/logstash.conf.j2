#jinja2: trim_blocks:True, lstrip_blocks:True
input {
	udp {
        port => 5213
    }
}

filter {
    mutate {
        split => ["host", "."]
        add_field => { "shortHostname" => "%{[host][0]}.%{[host][1]}.%{[host][2]}.x" }
    }
    mutate {
        rename => ["shortHostname", "host" ]
    }

    json {
        source => "block"
        target => "log"
        remove_field => ["block"]
    }
}

output {
#     stdout {codec => rubydebug}
